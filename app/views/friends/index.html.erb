<% if user_signed_in? %>

<h1>Friends</h1>
<br/>

<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td> <%= friend.First_name %> </td>
      <td> <%= friend.Last_name %> </td>
      <td> <%= friend.Email %> </td>
      <td> <%= friend.Phone %> </td>
      <td> <%= friend.Address %> </td>
      <td> <%= friend.user_id %> </td>

      <td> <%= link_to 'Show', friend, class: "btn btn-outline-secondary btn-sm" %> </td>
      <td> <%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-info btn-sm" %> </td>
      <td> <%= link_to 'Destroy', friend , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %> </td>
      </tr>
      <% end %>
      <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>

<% else %>
 <h2><center>... Welcome to Friends App ...</center></h2>
 <h6><center>Please login or Sign-Up to proceed</center></h6>
 <div class="container">

  <div class="row">
    <div class="col-sm">
      <img src="friends.PNG" class="img-fluid float-left" alt="Responsive image" style="size: 150px;">
    </div>
   
    <div class="col-sm">
      <img src="friends2.PNG" class="img-fluid float-right" alt="Responsive image" style="size: 100px;">
  </div>
</div>
</div>




 <%end%>


